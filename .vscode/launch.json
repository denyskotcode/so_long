{
	"version": "0.2.0",
	"configurations": [
	  {
	  "name": "Debug Makefile Project",
	  "type": "cppdbg",
	  "request": "launch",
	  "program": "${workspaceFolder}/so_long",
	  "args": ["maps/map.ber"], // Replace with actual arguments
	  "stopAtEntry": true, // Set to true if you want the debugger to pause at the program's entry point
	  "cwd": "${workspaceFolder}",
	  "environment": [],
	  "externalConsole": false,
	  "MIMode": "gdb", // Or lldb if on macOS
	  "miDebuggerPath": "/usr/bin/gdb", // Update to your gdb path
	  "setupCommands": [
		{
		"description": "Enable pretty-printing for gdb",
		"text": "-enable-pretty-printing",
		"ignoreFailures": true
		}
	  ]
	  }
	]
	}
	
  